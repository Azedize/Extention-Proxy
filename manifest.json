{
  "manifest_version": 3,
  "name": "Auto Proxy Config & IP Checker",
  "version": "1.3.0",
  "description": "Configure un proxy depuis une URL et ouvre https://api.ipify.org pour tester l'adresse IP.",

  "permissions": [
    "storage",
    "proxy",
    "tabs",
    "webRequest",
    "webRequestAuthProvider"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icons/icon3.png",
    "default_title": "Auto Proxy Config"
  },

  "icons": {
    "16": "icons/icon1.png",
    "24": "icons/icon2.png",
    "32": "icons/icon3.png",
    "48": "icons/icon4.png"
  }
}
